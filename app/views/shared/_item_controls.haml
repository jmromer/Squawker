.item-controls
  - if current_user.likes?(squawk)
    = link_to "", squawk_likes_path(squawk),
              method: :delete,
              remote: true,
              title: "Unlike this",
              class: "like-item active"
  - else
    = link_to "", squawk_likes_path(squawk),
              method: :post,
              remote: true,
              title: "Like this",
              class: "like-item"

  - if current_user.flagged?(squawk)
    = link_to "", squawk_flags_path(squawk),
              method: :delete,
              remote: true,
              title: "Un-flag this",
              class: "flag-item active"
  - else
    = link_to "", squawk_flags_path(squawk),
              method: :post,
              remote: true,
              title: "Flag this",
              class: "flag-item"

  - if current_user?(squawk.user)
    = link_to "", squawk_path(squawk),
              method: :delete,
              remote: true,
              title: "Delete this",
              class: "delete-item"
